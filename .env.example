# Django Production Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Core Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-generate-new-one-50-chars-min

# Allowed Hosts (comma separated, no spaces)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# CSRF Settings
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database (if using PostgreSQL in production)
# DATABASE_URL=postgres://user:password@localhost:5432/portfolio_db

# Optional: if you want to use a different static URL in production  
# STATIC_URL=/static/